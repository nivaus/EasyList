<?xml version='1.0' encoding='utf-8'?>
<widget id="io.EasyList" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="ParsePushPlugin">
        <param name="android-package" value="com.phonegap.parsepushplugin.ParsePushPlugin" />
    </feature>
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <icon src="www/img/logo.png" />
    <allow-intent href="market:*" />
    <name>EasyList</name>
    <description>
        An interactive application that make your shopping experience much easier!
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Easy List Corporation
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
